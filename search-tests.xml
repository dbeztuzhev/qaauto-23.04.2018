<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Linkedin">

    <test name="Search Tests Chrome">
        <parameter name="browserType" value="Chrome"/>
        <parameter name="envURL" value="https://www.linkedin.com/" />
        <classes>
            <class name="test.LinkedinSearchTest" />
        </classes>
    </test>

    <test name="Search Tests Chrome ru">
        <parameter name="browserType" value="Chrome"/>
        <parameter name="envURL" value="https://ru.linkedin.com/" />
        <classes>
            <class name="test.LinkedinSearchTest" />
        </classes>
    </test>

    <test name="Search Tests Chrome ua">
        <parameter name="browserType" value="Chrome"/>
        <parameter name="envURL" value="https://ua.linkedin.com/" />
        <classes>
            <class name="test.LinkedinSearchTest" />
        </classes>
    </test>

    <test name="Search Tests Firefox">
        <parameter name="browserType" value="Firefox"/>
        <parameter name="envURL" value="https://www.linkedin.com/" />
        <classes>
            <class name="test.LinkedinSearchTest" />
        </classes>
    </test>

    <test name="Search Tests Firefox ru">
        <parameter name="browserType" value="Firefox"/>
        <parameter name="envURL" value="https://www.ru.linkedin.com/" />
        <classes>
            <class name="test.LinkedinSearchTest" />
        </classes>
    </test>

    <test name="Search Tests Firefox ua">
